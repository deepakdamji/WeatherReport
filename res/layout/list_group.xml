<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="left"
    android:orientation="horizontal"
    android:padding="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="28dp"
	        android:layout_height="28dp"
	        android:gravity="left"
	        android:src="@drawable/clould_icon" />

	    <TextView
	        android:id="@+id/lblday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/lbltemperature"
	        android:layout_toRightOf="@+id/imageView1"
	        android:text="TextView"
	        android:textColor="#000000"
	        android:textSize="10dp" />

	    <TextView
	        android:id="@+id/lbltemperature"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignBottom="@+id/lblday"
	        android:layout_alignParentRight="true"
	        android:gravity="center_vertical|right"
	        android:textSize="10dp"
	        android:text="TextView" />

	    <TextView
	        android:id="@+id/lbldescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/imageView1"
	        android:layout_alignLeft="@+id/lblday"
	        android:layout_alignRight="@+id/lblday"
	        android:textSize="10dp"
	        android:text="TextView" />

	    <TextView
	        android:id="@+id/lblminmaxtemp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/lbldescription"
	        android:layout_alignBottom="@+id/lbldescription"
	        android:layout_alignParentRight="true"
	        android:text="TextView"
	        android:textSize="10dp" />

    </RelativeLayout>

</LinearLayout>